    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "lib": ["esnext.array"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "data", "config"]
}